<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Póster de la película -->
        <ImageView
            android:id="@+id/imageViewPoster"
            android:layout_width="200dp"
            android:layout_height="300dp"
            android:scaleType="fitCenter"
            android:contentDescription="poster_description"
            android:layout_marginBottom="16dp"
             />

        <!-- Título -->
        <TextView
            android:id="@+id/textViewTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Movie Title"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="8dp"
            android:textColor="@color/black" />

        <!-- Año -->
        <TextView
            android:id="@+id/textViewYear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Year: 2023"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"
            android:textColor="@color/black" />

        <!-- Duración -->
        <TextView
            android:id="@+id/textViewRuntime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Runtime: 120 minutes"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"
            android:textColor="@color/black" />

        <!-- Director -->
        <TextView
            android:id="@+id/textViewDirector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Director: John Doe"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"
            android:textColor="@color/black" />

        <!-- Géneros -->
        <TextView
            android:id="@+id/textViewGenre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Genres: Action, Comedy"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"
            android:textColor="@color/black" />

        <!-- País -->
        <TextView
            android:id="@+id/textViewCountry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Country: USA"
            android:textSize="16sp"
            android:layout_marginBottom="16dp"
            android:textColor="@color/black" />

        <!-- Plot -->
        <TextView
            android:id="@+id/textViewPlot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Plot: This is the movie plot description."
            android:textSize="16sp"
            android:layout_marginBottom="8dp"
            android:lineSpacingExtra="4dp"
            android:textColor="@color/black" />

    </LinearLayout>
</ScrollView>
